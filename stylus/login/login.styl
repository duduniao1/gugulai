@import "../public/header.styl"
body
  margin 0
  padding 0
  background #efeff4

 .header_login
   color #EA5404
   font-weight bolder

 article
   margin-top 20px
   section
     display flex
     height 48px
     background #fff url("../../../public/img/content_ID_icon@2x.png") no-repeat left 12px center
     background-size 6%
     border-bottom 1px solid #d6d7dc

     span
       flex 1
       text-align right
       line-height 48px
       font-weight bolder
     input
       flex 3
       border none
       outline none
       margin-left 10px
       font-size 14px
 .login_box
   display flex
   margin-top 44px

   .login_box_login
     width 351px
     height 44px
     background #c7c7c7
     color #fff
     font-size 16px
     font-weight bolder
     border-radius 5px
     border 0
     margin 0 auto
     outline none

   .login_box_register
     color #ff8a00
     flex 1
     text-align right
     font-weight bolder

   .login_box_forget
     flex 5
     text-align right
     color #646464

